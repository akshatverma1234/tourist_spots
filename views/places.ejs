<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles.css" />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <title>Tourist Spot</title>

    <style>
      h3 {
        margin-top: 20px;
        font-weight: bolder;
        color: white;
      }
    </style>
  </head>
  <body>
    <%- include("../views/navbar") %>
    <h3>Places To Visit</h3>
    <div class="container">
      <% places.forEach((place) =>{ %>
      <div class="card">
        <span class="rating-badge" style="background-color: #247c2a">
          <b><%= place.rating.toFixed(1) %></b>
          <span class="light"> / 5</span>
        </span>
        <a href="/places/<%= place._id %>">
          <img class="image" src="<%= place.image %>" alt="Image" />
        </a>
        <h3 class="title"><%= place.name %></h3>
        <p class="para"><%= place.description %></p>
      </div>
      <% }) %>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>

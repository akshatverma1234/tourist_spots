<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <title>Best Places in <%= city %></title>
  </head>
  <body>
    <%- include("../views/navbar") %>
    <h3>Best Places in <%= city %></h3>
    <div class="container">
      <% places.forEach((place) => { %>
      <div class="card">
        <a href="/places/<%= place._id %>">
          <img class="image" src="<%= place.image %>" placeholder="Image" />
        </a>
        <h3 class="title"><%= place.name %></h3>
        <p class="para"><%= place.description %></p>
      </div>
      <% }) %>
    </div>
  </body>
</html>
